{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pytest: api+integration",
      "type": "process",
      "command": "${workspaceFolder}\\venv311\\Scripts\\python.exe",
      "args": ["-m", "pytest", "-q", "tests/test_api.py", "tests/test_integration.py"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "DATABASE_URL": "sqlite+aiosqlite:///./riskdb.sqlite3",
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}

